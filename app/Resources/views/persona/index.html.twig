    {% extends '::layout_base.html.twig' %}

    {% block content %}

    <div class="row">
            <div class="col-md-3">
                <a class="btn btn-primary margin-bottom" href="{{ path('persona_new') }}">Create a new entry</a>
            </div>
        </div>    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Persona {{ 'list'|trans }}</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="data-table table table-bordered table-striped">
                        <thead>
                        <tr>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Fechanacimiento</th>
                                <th>Dni</th>
                                <th>Activo</th>
                                <th>Fechacreacion</th>
                                <th>Fechaactualizacion</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for persona in personas %}
                        <tr>
                                    <td>
                                        <a href="{{ path('persona_show', { 'id': persona.id }) }}">{{ persona.id }}</a>
                                    </td>
                                    <td>{{ persona.nombre }}</td>
                                    <td>{{ persona.apellido }}</td>
                                    <td>{% if persona.fechaNacimiento %}{{ persona.fechaNacimiento|date('Y-m-d') }}{% endif %}</td>
                                    <td>{{ persona.dni }}</td>
                                    <td>{% if persona.activo %}Yes{% else %}No{% endif %}</td>
                                    <td>{% if persona.fechaCreacion %}{{ persona.fechaCreacion|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    <td>{% if persona.fechaActualizacion %}{{ persona.fechaActualizacion|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    <td>

                                            <a class="btn btn-default"
                                               href="{{ path('persona_show', { 'id': persona.id }) }}"><i
                                                        class="fa fa-eye"></i></a>

                                            <a class="btn btn-default"
                                               href="{{ path('persona_edit', { 'id': persona.id }) }}"><i
                                                        class="fa fa-edit"></i></a>
                                    </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>

    {% endblock %}

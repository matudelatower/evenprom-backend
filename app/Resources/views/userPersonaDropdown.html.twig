{% trans_default_domain "app" %}
<form class="navbar-form navbar-left" role="search">
    <div class="form-group">
        <input type="text" class="form-control" id="navbar-search-input" placeholder="Buscar">
    </div>
</form>
<li class="dropdown notifications-menu">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-bell-o"></i>
    </a>
    <ul class="dropdown-menu">
        <li class="header">Descarga la App para configurar tus notificaciones</li>
        <div>
            <a href='https://play.google.com/store/apps/details?id=com.evenprom.evenpromapp&hl=es&pcampaignid=MKT-Other-global-all-co-prtnr-py-PartBadge-Mar2515-1'><img
                        alt='Disponible en Google Play'
                        class="img-responsive"
                        src='https://play.google.com/intl/en_us/badges/images/generic/es_badge_web_generic.png'/></a>
        </div>
    </ul>
</li>
<li class="dropdown user user-menu">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <img src="{% if app.user.persona.first and app.user.persona.first.imageName %}
                                {{ asset('uploads/images/personas/'~ app.user.persona.first.imageName) }}
                                {% else %}
                                    {{ asset('bundles/app/img/avatar.jpg') }}
                                {% endif %}" class="user-image" alt="User Image">
        <span class="hidden-xs username">{{ app.user.persona.first }}</span>
    </a>
    <ul class="dropdown-menu">
        <!-- User image -->
        <li class="user-header">
            <img src="{% if app.user.persona.first and app.user.persona.first.imageName %}
                                {{ asset('uploads/images/personas/'~ app.user.persona.first.imageName) }}
                                {% else %}
                                    {{ asset('bundles/app/img/avatar.jpg') }}
                                {% endif %}
                                " class="img-circle user-image" alt="User Image">

            <p>
                <span class="username">{{ app.user.persona.first }}</span>
                <small>{{ "Member since" | trans }} {{ app.user.actualizadoPor | date('M Y') }}</small>
            </p>
        </li>

        <!-- Menu Footer-->
        <li class="user-footer">
            <div class="pull-left">
                {% if is_granted("ROLE_PERSONA") %}
                    <a href="{{ path('persona_perfil') }}" class="btn btn-default btn-flat">
                        {{ 'perfil' |trans }}
                    </a>
                {% endif %}
            </div>
            <div class="pull-right">
                <a href="{{ path('fos_user_security_logout') }}"
                   class="btn btn-default btn-flat">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
            </div>
        </li>
    </ul>
</li>